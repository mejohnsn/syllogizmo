<!-- This is the 01/16/2017 attempt to rewrite it using RelativeLayout -->
<!-- id/names subject to change -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="23dp" >
 <TextView
     android:id="@+id/helloTV"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:text="@string/hello"
     />
 <Button
     android:id="@+id/major_premise_button"
     android:layout_alignParentRight="true"
     android:layout_below="@id/helloTV"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="@string/major_premise_button_label"
     />
 <Button
     android:id="@+id/minor_premise_button"
     android:layout_alignParentRight="true"
     android:layout_below="@id/major_premise_button"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:text="@string/minor_premise_button_label"
     />
 <Button
     android:id="@+id/conclusion_button"
     android:layout_alignParentRight="true"
     android:layout_below="@id/minor_premise_button"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:text="@string/conclusion_button_label"
     />
 <Button
     android:id="@+id/show_results_button"
     android:layout_alignParentRight="true"
     android:layout_below="@id/conclusion_button"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:text="@string/show_results_label"
     android:textColor="@color/results_color"
     />
 <!--  horrible colors. Still playing around w/ background -->
 <!--       android:background="#F000F0" backing out -->

 <Button
     android:id="@+id/about_button"
     android:layout_below="@id/show_results_button"
     android:layout_centerHorizontal="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/about_label"
     />

</RelativeLayout>
